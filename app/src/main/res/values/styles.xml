<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Primary theme color of the app (sets background color of app bar) -->
        <item name="colorPrimary">#EFA216</item>
        <!-- Background color of buttons in the app -->
        <item name="colorButtonNormal">#7C4DFF</item>
        <item name="android:textColor">#071307</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:statusBarColor">#FFA000</item>


    </style>


    <style name="scrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@drawable/tennis_ball_amber6</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
        <item name="android:fillViewport">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>


    <style name="LinearLayout1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


    <style name="LinearLayout2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="LinearLayout3">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/dim180</item>
        <item name="android:orientation">vertical</item>

    </style>

    <style name="Photo">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/dim80</item>
        <item name="android:layout_marginBottom">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_vertical_margin</item>

    </style>

    <style name="Name">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/colorAccent</item>
        <item name="android:paddingTop">@dimen/dim10</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/name_player_a</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="Surname">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/name_bg_shadow</item>
        <item name="android:cursorVisible">false</item>
        <item name="android:gravity">center</item>
        <item name="android:hint">@string/surname_player_a</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:paddingBottom">@dimen/dim10</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textSize">@dimen/text_size_18</item>
    </style>

    <style name="PointsGamesSetsA">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginEnd">@dimen/dim8</item>
        <item name="android:layout_marginLeft">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginRight">@dimen/dim8</item>
        <item name="android:layout_marginStart">@dimen/activity_vertical_margin</item>
        <item name="android:paddingEnd">@dimen/dim8</item>
        <item name="android:paddingLeft">@dimen/activity_vertical_margin</item>
        <item name="android:paddingRight">@dimen/dim8</item>
        <item name="android:paddingStart">@dimen/activity_vertical_margin</item>
    </style>

    <style name="PointsGamesSetsB">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_marginEnd">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginLeft">@dimen/dim8</item>
        <item name="android:layout_marginRight">@dimen/activity_vertical_margin</item>
        <item name="android:layout_marginStart">@dimen/dim8</item>
        <item name="android:paddingEnd">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">@dimen/dim8</item>
        <item name="android:paddingRight">@dimen/activity_vertical_margin</item>
        <item name="android:paddingStart">@dimen/dim8</item>
    </style>

    <style name="TextViewWeight">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>

    </style>

    <style name="RelativeLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dim30</item>
        <item name="android:paddingLeft">@dimen/dim20</item>
        <item name="android:paddingRight">@dimen/dim20</item>
    </style>



    <style name="PlusButtonLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/activity_horizontal_margin</item>
    </style>



    <style name="PlusButton">
        <item name="android:layout_width">@dimen/dim48</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/round_button_orange_shadow4</item>
        <item name="android:text">@string/Plus</item>

    </style>




    <style name="TheWinnerIs">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/activity_vertical_margin</item>
        <item name="android:layout_gravity">center</item>
    </style>


</resources>